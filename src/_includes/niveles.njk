<div class="container mx-auto px-4">
    <!-- TOPICS PANEL -->
    <div class="group bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 overflow-hidden mb-8 transition-all duration-300" id="topicsPanel">
        <div class="panel-header bg-gradient-to-r from-indigo-600 to-purple-600 p-4 text-white flex items-center justify-between cursor-pointer select-none">
            <h3 class="flex items-center gap-2 text-lg font-semibold m-0">
                <i class="fas fa-search"></i>
                Buscar Temas
            </h3>
            <button class="panel-toggle bg-white/20 hover:bg-white/30 text-white w-8 h-8 rounded-full flex items-center justify-center transition-all duration-300 group-[.collapsed]:-rotate-90" id="panelToggle" aria-label="Alternar panel">
                <i class="fas fa-chevron-down transition-transform duration-300"></i>
            </button>
        </div>
        <div class="panel-content bg-white dark:bg-slate-800 p-5 transition-all duration-300 group-[.collapsed]:max-h-0 group-[.collapsed]:p-0 group-[.collapsed]:opacity-0 overflow-hidden" id="panelContent">
            <div class="relative w-full search-box">
                <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                <input type="text" id="topicSearch" placeholder="Buscar por tema..." autocomplete="off" 
                       class="w-full pl-11 pr-4 py-3 rounded-lg border-2 border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-slate-900 text-slate-800 dark:text-slate-100 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-all duration-300 placeholder-slate-400"
                       onclick="event.stopPropagation()" onkeydown="event.stopPropagation()">
            </div>
        </div>
    </div>

    {{ content | safe }}

    <!-- INLINE LESSON EDITOR -->
    <div id="inlineEditorContainer" class="hidden my-10 p-8 bg-slate-50 dark:bg-slate-800 rounded-2xl border-2 border-indigo-500 shadow-xl">
        <div class="flex justify-between items-center mb-6 border-b border-indigo-100 dark:border-indigo-900/30 pb-4">
            <h2 class="text-indigo-600 dark:text-indigo-400 m-0 flex items-center gap-3 text-2xl font-bold">
                <i class="fas fa-edit"></i>
                Editar Lección
            </h2>
            <button id="cancelEditBtn" class="bg-gray-200 hover:bg-gray-300 dark:bg-slate-700 dark:hover:bg-slate-600 text-slate-600 dark:text-slate-300 rounded-full w-10 h-10 flex items-center justify-center transition-colors">
                <i class="fas fa-times text-lg"></i>
            </button>
        </div>

        <form id="inlineLessonForm" class="space-y-6">
            <div>
                <label for="inlineLessonTitle" class="block mb-2 font-semibold text-slate-600 dark:text-slate-300">
                    Título de la Lección
                </label>
                <input type="text" id="inlineLessonTitle" required 
                       class="w-full p-3 rounded-xl border-2 border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-900 text-slate-800 dark:text-slate-100 focus:border-indigo-500 focus:outline-none transition-colors">
            </div>

            <input type="hidden" id="inlineLessonId">

            <div>
                <label for="inlineLessonDescription" class="block mb-2 font-semibold text-slate-600 dark:text-slate-300">
                    Descripción (opcional)
                </label>
                <textarea id="inlineLessonDescription" rows="2" 
                          class="w-full p-3 rounded-xl border-2 border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-900 text-slate-800 dark:text-slate-100 focus:border-indigo-500 focus:outline-none transition-colors resize-y"></textarea>
            </div>

            <div>
                <label class="block mb-2 font-semibold text-slate-600 dark:text-slate-300">
                    Contenido de la Lección
                </label>
                <div id="inlineLessonContentEditor" class="min-h-[300px] bg-white dark:bg-slate-900 rounded-xl border-2 border-slate-200 dark:border-slate-600 overflow-hidden"></div>
            </div>

            <div class="flex gap-4 justify-center pt-4">
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-full shadow-lg hover:shadow-indigo-500/30 hover:-translate-y-1 transition-all duration-300 flex items-center gap-2">
                    <i class="fas fa-paper-plane"></i>
                    <span>Guardar Cambios</span>
                </button>
            </div>
        </form>
    </div>

    <!-- LEVEL ACTIONS -->
    <div class="level-actions mt-16 mb-16 text-center p-6 bg-slate-50 dark:bg-slate-800/50 rounded-2xl border border-slate-100 dark:border-slate-700">
        <a href="/Contribute/" id="createLessonBtn" class="inline-flex items-center gap-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-8 rounded-full shadow-lg hover:shadow-indigo-500/30 hover:-translate-y-1 transition-all duration-300">
            <i class="fas fa-plus"></i>
            Crear Nueva Lección
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('topicSearch');
        const searchBox = document.querySelector('.search-box');
        
        // Function to stop propagation
        function stop(e) { e.stopPropagation(); }
        
        // Prevent search input from closing the panel
        if (searchInput) {
            searchInput.addEventListener('click', stop);
            searchInput.addEventListener('mousedown', stop);
            searchInput.addEventListener('touchstart', stop);
            searchInput.addEventListener('keydown', stop);
        }
        if (searchBox) {
            searchBox.addEventListener('click', stop);
            searchBox.addEventListener('mousedown', stop);
            searchBox.addEventListener('touchstart', stop);
        }

        // Toggle Logic is now handled in nivel-common.js to avoid conflicts

        // Detect current level from page URL and update contribute button
        const createLessonBtn = document.getElementById('createLessonBtn');
        if (createLessonBtn) {
            // Extract level from current page path (e.g., /NivelA1.html -> A1)
            const currentPath = window.location.pathname;
            const levelMatch = currentPath.match(/Nivel([A-C][12])/i);
            
            if (levelMatch) {
                const level = levelMatch[1].toUpperCase(); // A1, A2, B1, B2, or C1
                // Update the href to include the level parameter
                createLessonBtn.href = `/Contribute/?level=${level}`;
                console.log(`✅ Contribute button updated for level: ${level}`);
            }
        }
    });
</script>


