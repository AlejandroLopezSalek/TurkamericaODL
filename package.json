{
  "name": "turkamerica-proyecto-completo",
  "version": "3",
  "description": "Frontend (Eleventy) y Backend (Express) para TurkAmerica",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run watch:11ty\" \"nodemon server/server.js\"",
    "test": "jest",
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o ./src/css/tailwind-output.css --minify",
    "watch:css": "tailwindcss -i ./src/css/tailwind.css -o ./src/css/tailwind-output.css --watch",
    "watch:11ty": "npx @11ty/eleventy --watch",
    "serve:11ty": "concurrently \"npm run watch:css\" \"npx @11ty/eleventy --serve\"",
    "build": "npm run build:css && npx @11ty/eleventy",
    "clean": "node -e \"require('fs').rmSync('_site_tmp', {recursive:true, force:true})\"",
    "rebuild": "npm run clean && npm run build",
    "set-admin": "node server/scripts/set_admin.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "groq-sdk": "^0.37.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "web-push": "^3.6.7",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.19"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
